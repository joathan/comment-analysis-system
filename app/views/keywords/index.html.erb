<h1>Keywords</h1>
<%= link_to "Nova Keyword", new_keyword_path, class: "btn btn-primary" %>

<table>
  <thead>
    <tr>
      <th>Word</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @keywords.each do |keyword| %>
      <tr>
        <td><%= keyword.term %></td>
        <td>
          <%= link_to "Editar", edit_keyword_path(keyword) %> |
          <%= link_to "Remover", keyword, method: :delete, data: { confirm: "Tem certeza?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
