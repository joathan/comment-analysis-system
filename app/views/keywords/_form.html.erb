<%= form_with(model: keyword, local: true) do |f| %>
  <% if keyword.errors.any? %>
    <div>
      <ul>
        <% keyword.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= f.label :term, "Palavra-chave" %>
    <%= f.text_field :term, autofocus: true %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>
